<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="200.0" prefWidth="403.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ro.ubbcluj.map.mavenfx2.controllers.MessageAllController">
    <children>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="302.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Send a message to all your friends">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
                <TextField fx:id="messageTextField" prefHeight="33.0" prefWidth="363.0" promptText="Your message here...">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
            <HBox prefHeight="18.0" prefWidth="363.0">
               <children>
                      <Button fx:id="sendButton" mnemonicParsing="false" onAction="#sendMessage" text="Send">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                      </Button>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" text="Cancel">
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
